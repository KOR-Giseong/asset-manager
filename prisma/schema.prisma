generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String?         @unique
  emailVerified  DateTime?
  image          String?
  accounts       Account[]
  sessions       Session[]
  assets         Asset[]
  properties     Property[]
  assetSnapshots AssetSnapshot[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Asset {
  id           String        @id @default(cuid())
  name         String
  type         String
  amount       Float         // 총 매수 금액 (purchasePrice * quantity로 계산, 비주식은 직접 입력)
  currentPrice Float         // 총 평가 금액 (시세 * quantity 또는 비주식은 직접 입력)
  symbol       String?
  
  // 주식 전용 필드
  purchasePrice Float?       // 매수 단가 (주식에서만 사용)
  quantity      Float?       // 보유 수량 (주식에서만 사용)
  
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
}

model Transaction {
  id       String   @id @default(cuid())
  type     String
  quantity Float
  price    Float
  date     DateTime @default(now())
  assetId  String
  asset    Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
}

// =========================================
// 부동산 전용 모델
// =========================================

model Property {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 기본 정보
  name         String // 자산명 (예: 강남 아파트)
  propertyType PropertyType // 아파트, 빌라, 오피스텔, 상가
  contractType ContractType // 자가, 전세, 월세(임대중)
  address      String // 주소

  // 가격 정보
  purchasePrice   Float // 매수 가격
  currentPrice    Float // 현재 시세
  acquisitionCost Float @default(0) // 취득세 및 부대비용

  // 대출 정보
  loanPrincipal    Float @default(0) // 대출 원금
  loanInterestRate Float @default(0) // 대출 이자율 (연 %)
  
  // 임대 정보 (임대인/임차인 관점)
  deposit        Float @default(0) // 보증금 (전세금 또는 월세 보증금)
  monthlyRent    Float @default(0) // 월세 수입/지출
  maintenanceFee Float @default(0) // 관리비
  
  // 계약 정보
  contractStartDate DateTime? // 계약 시작일
  contractEndDate   DateTime? // 계약 만기일

  // 메모
  notes String? @db.Text

  // 관계
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum PropertyType {
  APARTMENT  // 아파트
  VILLA      // 빌라/다세대
  OFFICETEL  // 오피스텔
  COMMERCIAL // 상가
  LAND       // 토지
  OTHER      // 기타
}

enum ContractType {
  OWNED       // 자가 (소유)
  JEONSE      // 전세 (임차인)
  MONTHLY     // 월세 (임차인)
  RENTAL_JEONSE  // 전세 놓음 (임대인)
  RENTAL_MONTHLY // 월세 놓음 (임대인)
}

// =========================================
// 자산 히스토리 스냅샷 (추이 분석용)
// =========================================

model AssetSnapshot {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  
  // 스냅샷 데이터
  totalAmount     Float  // 총 자산 (주식 + 부동산 + 예적금)
  stockAmount     Float  @default(0) // 주식 자산
  propertyAmount  Float  @default(0) // 부동산 자산
  depositAmount   Float  @default(0) // 예적금 자산
  
  // 관계
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}
